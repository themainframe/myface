{
    "routes": {

        "home": {
            "url": "/",
            "controller": "controller.helloworld",
            "action": "sayHello"
        },

        "show_your_name": {
            "url": "/{yourName}",
            "controller": "controller.helloworld",
            "action": "sayYourName"
        }

    },

    "layers": {
        "router": "layer.router",
        "twig": "layer.twig"
    },

    "services": {

        "twig": {
            "loaders": {
                "app": {
                    "class": "\\Twig_Loader_Filesystem",
                    "parameters": ["../view/"]
                }
            }
        },

        "layer": {
            "router": {
                "class": "\\Veto\\Layer\\RouterLayer"
            },
            "twig": {
                "class": "\\Veto\\Twig\\Layer\\TwigLayer",
                "parameters": ["@twig.environment"]
            }
        },

        "controller": {
            "helloworld": {
                "class": "\\Controller\\HelloWorld",
                "parameters": ["@twig.environment"],
                "one_shot": true
            }
        }
    }
}
