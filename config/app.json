{
    "routes": {

        "home": {
            "url": "/",
            "controller": "controllers.helloworld",
            "action": "sayHello"
        },

        "show_your_name": {
            "url": "/{yourName}",
            "controller": "controllers.helloworld",
            "action": "sayYourName"
        }

    },

    "layers": [
        "layers.router"
    ],

    "services": {

        "twig.loader": {
            "class": "\\Twig_Loader_Filesystem",
            "parameters": ["../view/"]
        },

        "twig": {
            "class": "\\Twig_Environment",
            "parameters": ["@twig.loader", []]
        },

        "layers.router": {
            "class": "\\Veto\\Layer\\RouterLayer"
        },

        "controllers.helloworld": {
            "class": "\\Controller\\HelloWorld",
            "parameters": ["@twig"],
            "persistent": true
        }

    }
}
