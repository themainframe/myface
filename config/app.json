{
    "routes": {

        "home": {
            "url": "/",
            "controller": "controller.helloworld",
            "action": "sayHello",
            "methods": ["GET"]
        },

        "show_your_name": {
            "url": "/{yourName}",
            "controller": "controller.helloworld",
            "action": "sayYourName",
            "methods": ["GET"]
        }

    },

    "layers": {
        "router": "layer.router"
    },

    "services": {

        "controller": {
            "helloworld": {
                "class": "\\Controller\\HelloWorld",
                "parameters": ["@twig.environment"],
                "one_shot": true
            }
        },

        "templating": {
            "class": "\\Veto\\Templating\\Engine\\TwigEngine",
            "parameters": ["@twig.environment"]
        },

        "twig": {
            "environment": {
                "class": "\\Twig_Environment",
                "parameters": ["@twig.loader", []]
            },
            "loader": {
                "class": "\\Twig_Loader_Filesystem",
                "parameters": ["../view/"]
            }
        },

        "layer": {
            "router": {
                "class": "\\Veto\\Layer\\Router\\RouterLayer",
                "parameters": ["@app"]
            }
        }
    }
}
